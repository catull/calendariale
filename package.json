{
  "name": "calendariale",
  "version": "0.6.1",
  "description": "Calendrical calculations library in TypeScript",
  "repository": "catull/calendariale",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "source": "src/index.ts",
  "scripts": {
    "build": "yarn lint && yarn build:dev",
    "build:dev": "yarn prebuild && tsc",
    "prebuild": "barrelsby -D -q -l all -d src -e src/spec -e create-dist",
    "clean": "rimraf -fr dist tmp",
    "clean:real": "rimraf -fr dist tmp \"src/**/index.ts\"",
    "clean:dist": "rimraf -fr .rts2_cache_* dist tmp 'src/**/index.ts' node_modules",
    "dist": "yarn build && yarn dist:package.json",
    "dist:package.json": "ts-node src/create-dist-package.json.ts $npm_package_version > dist/package.json",
    "test": "jest",
    "test:dev": "jest --watch",
    "test:prod": "jest --silent --coverage --runInBand",
    "format": "prettier 'src/**/*.[jt]s' --write --list-different --loglevel warn",
    "format:lib": "prettier 'lib/**/*.[jt]s' --write --list-different --loglevel warn",
    "lint": "tslint -p tslint.json",
    "lint:test": "tslint -p tslint.json src/spec/*/*.ts"
  },
  "author": "catull@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@types/node": "12.12.14",
    "barrelsby": "2.2.0",
    "jest": "24.9.0",
    "jest-environment-jsdom-thirteen": "1.0.1",
    "jest-junit": "10.0.0",
    "jest-sonar-reporter": "2.0.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.4",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-sonarts": "1.9.0",
    "typescript": "3.7.2",
    "yarn": "1.21.0"
  },
  "jest-junit": {
    "ancestorSeparator": " â€º ",
    "classNameTemplate": "{classname}",
    "output": "tmp/reports/jest-junit.xml",
    "suiteName": "jest tests",
    "suiteNameTemplate": "{filepath}",
    "titleTemplate": "{title}",
    "usePathForSuiteName": "true"
  },
  "jestSonar": {
    "indent": 2,
    "reportFile": "jest-sonar-report.xml",
    "reportPath": "tmp/reports",
    "sonar56x": true
  }
}
