{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "charset": "utf8",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "listFiles": true,
        "module": "commonjs",
        "newLine": "LF",
        "noImplicitAny": true,
        "noLib": false,
        "outDir": "lib/",
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "exclude": [
        "build",
        "node_modules"
    ],
    "include": [
        "astro/*.spec.ts",
        "calendar/*.spec.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}