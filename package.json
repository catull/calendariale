{
  "name": "calendariale",
  "version": "0.8.0",
  "description": "Calendrical calculations library in TypeScript",
  "repository": "catull/calendariale",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc -p .",
    "prebuild": "barro .barro.config.cjs --write",
    "prebuild.old": "barrelsby -D -H -q -l all -d src -e src/spec -e create-dist",
    "postinstall": "pnpm prebuild",
    "clean": "rimraf -fr dist tmp",
    "clean:real": "rimraf -fr dist tmp \"src/**/index.ts\"",
    "dist": "pnpm prebuild && pnpm lint && pnpm lint:test && pnpm build && pnpm test:prod && pnpm dist:package.json && pnpm format:dist",
    "dist:package.json": "node src/create-dist-package.json.js $npm_package_version > dist/package.json",
    "test": "vitest --run",
    "test:dev": "vitest --watch",
    "test:prod": "vitest --run --silent --coverage",
    "format": "prettier 'src/**/*.[jt]s' --write --log-level warn",
    "format:check": "prettier 'src/**/*.[jt]s' --list-different --log-level warn",
    "format:dist": "prettier 'dist/**/*.[jt]s' --write --list-different --log-level warn",
    "lint": "eslint --fix src/*.ts src/calendar/**/*.ts",
    "lint:check": "eslint src/*.ts src/calendar/**/*.ts",
    "lint:test": "eslint --fix -c .eslintrc.spec.json src/spec/**/*.ts"
  },
  "author": "catull@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@types/node": "20.8.6",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "@vitest/coverage-v8": "0.34.6",
    "barro": "1.2.8",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-vitest": "0.3.2",
    "happy-dom": "12.9.1",
    "pnpm": "8.9.1",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "typescript": "5.2.2",
    "vite": "4.4.11",
    "vitest": "0.34.6"
  },
  "packageManager": "pnpm@${npm_package_devDependencies_pnpm}"
}
