{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "charset": "utf8",
        "declaration": true,
        "diagnostics": false,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "listFiles": false,
        "module": "commonjs",
        "newLine": "LF",
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noLib": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "lib/",
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "target": "es6"
    },
    "exclude": [
        "lib",
        "node_modules",
        "spec"
    ],
    "include": [
        "src/*.ts",
        "src/calendar/*.ts"
    ]
}