{
    "compilerOptions": {
        "declaration": true,
        "module": "CommonJS",
        "target": "es6",
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "listFiles": false,
        "outDir": "build/"
    },
    "exclude": [
        "build",
        "node_modules",
        "spec"
    ],
    "files": [
        "src/Const.ts",
        "src/Astro.ts",
        "src/Calendar.ts",
        "src/HinduAlgorithms.ts",
        "src/calendar/ArmenianCalendar.ts",
        "src/calendar/AztecTonalpohualliCalendar.ts",
        "src/calendar/AztecXihuitlCalendar.ts",
        "src/calendar/BahaiCalendar.ts",
        "src/calendar/BalinesePawukonCalendar.ts",
        "src/calendar/ChineseCalendar.ts",
        "src/calendar/ChineseDayNameCalendar.ts",
        "src/calendar/CopticCalendar.ts",
        "src/calendar/EgyptianCalendar.ts",
        "src/calendar/EthiopicCalendar.ts",
        "src/calendar/FrenchArithmeticCalendar.ts",
        "src/calendar/FrenchRevolutionaryCalendar.ts",
        "src/calendar/GregorianCalendar.ts",
        "src/calendar/HebrewCalendar.ts",
        "src/calendar/HebrewObservationalCalendar.ts",
        "src/calendar/HinduLunarAstroCalendar.ts",
        "src/calendar/HinduLunarModernCalendar.ts",
        "src/calendar/HinduLunarOldCalendar.ts",
        "src/calendar/HinduSolarAstroCalendar.ts",
        "src/calendar/HinduSolarModernCalendar.ts",
        "src/calendar/HinduSolarOldCalendar.ts",
        "src/calendar/IslamicCalendar.ts",
        "src/calendar/IslamicObservationalCalendar.ts",
        "src/calendar/IsoWeekCalendar.ts",
        "src/calendar/JulianCalendar.ts",
        "src/calendar/MayanCountCalendar.ts",
        "src/calendar/MayanHaabCalendar.ts",
        "src/calendar/MayanTzolkinCalendar.ts",
        "src/calendar/PersianArithmeticCalendar.ts",
        "src/calendar/PersianAstronomicalCalendar.ts",
        "src/calendar/RomanCalendar.ts",
        "src/calendar/TibetanCalendar.ts"
    ]
    /*
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "newLineCharacter": "\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": false,
        "placeOpenBraceOnNewLineForControlBlocks": false
    },
    "atom": {
        "rewriteTsconfig": true,
    }
    */
}
