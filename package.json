{
  "name": "calendariale",
  "version": "0.8.0",
  "description": "Calendrical calculations library in TypeScript",
  "repository": "catull/calendariale",
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "typesVersions": {
    "*": {
      "index.d.ts": [
        "dist/index.d.ts"
      ]
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc -p .",
    "prebuild": "barro .barro.config.cjs --write",
    "prebuild.old": "barrelsby -D -H -q -l all -d src -e src/spec -e create-dist",
    "postinstall": "pnpm prebuild",
    "clean": "rimraf -fr dist tmp",
    "clean:real": "rimraf -fr dist tmp \"src/**/index.ts\"",
    "dist": "pnpm prebuild && pnpm lint && pnpm lint:test && pnpm build && pnpm test:prod && pnpm dist:package.json && pnpm format:dist",
    "dist:package.json": "ts-node --esm src/create-dist-package.json.mts $npm_package_version > dist/package.json",
    "test": "jest",
    "test:dev": "jest --watch",
    "test:prod": "mkdir -p tmp/reports && jest --silent --coverage --runInBand",
    "format": "prettier 'src/**/*.[jt]s' --write --loglevel warn",
    "format:check": "prettier 'src/**/*.[jt]s' --list-different --loglevel warn",
    "format:dist": "prettier 'dist/**/*.[jt]s' --write --list-different --loglevel warn",
    "lint": "eslint --fix src/[ACL]*.ts src/calendar/**/*.ts",
    "lint:check": "eslint src/[ACL]*.ts src/calendar/**/*.ts",
    "lint:test": "eslint --fix -c .eslintrc.spec.json src/spec/**/*.ts"
  },
  "author": "catull@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@types/jest": "29.5.0",
    "@types/node": "18.15.10",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "barro": "1.2.8",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-junit": "15.0.0",
    "jest-sonar-reporter": "2.0.0",
    "pnpm": "7.30.5",
    "prettier": "2.8.7",
    "rimraf": "4.4.1",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  },
  "jest-junit": {
    "ancestorSeparator": " â€º ",
    "classNameTemplate": "{classname}",
    "output": "tmp/reports/jest-junit.xml",
    "outputName": "tmp/reports/jest-junit.xml",
    "suiteName": "jest tests",
    "suiteNameTemplate": "{filepath}",
    "titleTemplate": "{title}",
    "usePathForSuiteName": "true"
  },
  "jestSonar": {
    "indent": 2,
    "reportFile": "jest-sonar-report.xml",
    "reportPath": "tmp/reports",
    "sonar56x": true
  },
  "packageManager": "pnpm@7.24.2"
}

