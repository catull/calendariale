{
  "name": "calendariale",
  "version": "0.5.13",
  "description": "Calendrical calculations library in TypeScript",
  "repository": "catull/calendariale",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "source": "src/index.ts",
  "scripts": {
    "build": "yarn lint && yarn build:dev",
    "build:dev": "tsc",
    "clean": "rm -fr .rts2_cache_* dist tmp",
    "clean:dist": "rm -fr .rts2_cache_* dist tmp node_modules",
    "dist": "yarn build && yarn dist:package.json",
    "dist:package.json": "ts-node src/create-dist-package.json.ts $npm_package_version > dist/package.json",
    "test": "jest",
    "test:dev": "jest --watch",
    "test:prod": "jest --silent --coverage --runInBand",
    "format": "prettier 'src/**/*.[jt]s' --write --list-different --loglevel warn",
    "format:lib": "prettier 'lib/**/*.[jt]s' --write --list-different --loglevel warn",
    "lint": "tslint -p tslint.json",
    "lint:test": "tslint -p tslint.json src/spec/*/*.ts"
  },
  "author": "catull@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@types/jest": "23.3.10",
    "@types/node": "10.12.15",
    "jest": "23.6.0",
    "jest-junit": "5.2.0",
    "jest-sonar-reporter": "2.0.0",
    "prettier": "1.15.3",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-sonarts": "1.8.0",
    "typescript": "3.2.2",
    "yarn": "1.12.3"
  },
  "jest-junit": {
    "ancestorSeparator": " â€º ",
    "classNameTemplate": "{classname}",
    "output": "tmp/reports/jest-junit.xml",
    "suiteName": "jest tests",
    "suiteNameTemplate": "{filepath}",
    "titleTemplate": "{title}",
    "usePathForSuiteName": "true"
  },
  "jestSonar": {
    "indent": 2,
    "reportFile": "jest-sonar-report.xml",
    "reportPath": "tmp/reports",
    "sonar56x": true
  }
}
