{
  /* Visit https://aka.ms/tsconfig.json to read more about this file */
  // "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": "",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext",
      "dom",
    ],
    "listFiles": false,
    "module": "ESNext",
    "newLine": "lf",
    "outDir": "dist/",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "strict": true,
    "target": "ESNext",
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/create-dist-package.json.js",
  ],
  "include": [
    "src/*.ts",
    "src/calendar/**/*.ts",
    "src/spec",
  ],
  "types": [
    "vitest/globals"
  ]
}
