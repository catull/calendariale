{
  "name": "calendariale",
  "version": "0.0.1",
  "description": "Calendrical calculations in JavaScript",
  "repository": "catull/calendariale",
  "main": "index.js",
  "scripts": {
    "build": "npm run lint && npm run build:dev",
    "build:dev": "tsc",
    "clean": "rm -fr lib spec/lib",
    "clean:dist": "rm -fr .vscode lib spec/lib node_modules spec/typings",
    "flow:check": "flow check --color=always --all --show-all-errors --profile",
    "flow:suggest": "flow suggest src/*.ts src/calendar/*.ts",
    "lint": "tslint -p tslint.json",
    "lint:test": "tslint -p tslint.json src/spec/*/*.ts",
    "test": "npm run lint:test && mocha -r ts-node/register src/spec/*/*.spec.ts",
    "postinstall": "tsc"
  },
  "author": "",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "2.2.48",
    "chai": "4.2.0",
    "dirty-chai": "2.0.1",
    "flow-bin": "0.63.1",
    "mocha": "4.1.0",
    "ts-node": "4.1.0",
    "tslint": "5.11.0",
    "typescript": "2.9.2"
  }
}
