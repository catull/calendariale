{
  "name": "calendariale",
  "version": "0.8.0",
  "description": "Calendrical calculations library in TypeScript",
  "repository": "catull/calendariale",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc -p .",
    "prebuild": "barro .barro.config.cjs --write",
    "prebuild.old": "barrelsby -D -H -q -l all -d src -e src/spec -e create-dist",
    "postinstall": "pnpm prebuild",
    "clean": "rimraf -fr dist tmp",
    "clean:real": "rimraf -fr dist tmp 'src/index.ts' 'src/calendar/index.ts' 'src/calendar/core/index.ts'",
    "dist": "pnpm run prebuild && pnpm run lint && pnpm build && pnpm test:prod && pnpm dist:package.json && pnpm format:dist",
    "dist:package.json": "node src/create-dist-package.json.js $npm_package_version > dist/package.json",
    "test": "vitest --run",
    "test:dev": "vitest --watch",
    "test:prod": "vitest --run --silent --coverage",
    "format": "biome format --fix --log-level=warn 'src'",
    "format:check": "biome format 'src'",
    "format:dist": "biome format --fix --log-level=warn 'dist'",
    "lint": "biome lint --fix 'src'",
    "lint:check": "biome lint 'src'"
  },
  "author": "catull@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "22.8.6",
    "@vitest/coverage-v8": "2.1.4",
    "barro": "1.2.8",
    "globals": "15.11.0",
    "happy-dom": "15.8.0",
    "pnpm": "9.12.3",
    "rimraf": "6.0.1",
    "typescript": "5.6.3",
    "vite": "5.4.10",
    "vitest": "2.1.4"
  },
  "packageManager": "pnpm@9.12.3"
}
