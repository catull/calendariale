{
  "name": "calendariale",
  "version": "0.0.1",
  "description": "Calendrical calculations in JavaScript",
  "repository": {
    "type": "git",
    "url": "git://github.com/catull/calendariale.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm run lint && npm run build:dev",
    "build:dev": "tsc",
    "clean": "rm -fr lib spec/lib",
    "clean:dist": "rm -fr lib spec/lib node_modules spec/typings",
    "flow:check": "flow check --color=always --all --show-all-errors --profile",
    "flow:suggest": "flow suggest src/*.ts src/calendar/*.ts",
    "lint": "tslint src/*.ts src/*/*.ts",
    "lint-test": "tslint spec/*.ts spec/*/*.ts",
    "test": "mocha spec/*/*.spec.ts",
    "postinstall": "tsc"
  },
  "author": "",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "chai": "^3.5.0",
    "dirty-chai": "^1.2.2",
    "mocha": "^2.5.3",
    "requirejs": "^2.2.0"
  }
}
